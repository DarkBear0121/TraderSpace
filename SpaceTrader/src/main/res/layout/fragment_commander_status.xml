<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".WelcomeScreen">

	<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:text="Commander Status"
			android:id="@+id/textView"
			android:layout_alignParentTop="true"
			android:layout_centerHorizontal="true"
			android:textStyle="bold"/>

	<TableLayout
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_below="@+id/textView"
			android:layout_alignParentLeft="true"
			android:layout_alignParentStart="true"
			android:stretchColumns="2">

		<TableRow
				android:layout_width="fill_parent"
				android:layout_height="fill_parent">

			<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textAppearance="?android:attr/textAppearanceMedium"
					android:text="Name:"
					android:id="@+id/textView2"
					android:layout_column="0"/>

			<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textAppearance="?android:attr/textAppearanceMedium"
					android:text="Jameson"
					android:id="@+id/txtCommanderStatusNameCommander"
					android:layout_column="1"
					android:layout_span="4"/>
		</TableRow>

		<TableRow
				android:layout_width="fill_parent"
				android:layout_height="fill_parent">

			<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textAppearance="?android:attr/textAppearanceMedium"
					android:text="Pilot:"
					android:id="@+id/textView3"
					android:layout_column="0"/>

			<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textAppearance="?android:attr/textAppearanceMedium"
					android:text="5 [5]"
					android:id="@+id/txtCommanderStatusPilot"
					android:layout_column="1"/>

			<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textAppearance="?android:attr/textAppearanceMedium"
					android:text="Kills:"
					android:id="@+id/textView11"
					android:layout_column="3"/>

			<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textAppearance="?android:attr/textAppearanceMedium"
					android:text="0"
					android:id="@+id/txtCommanderStatusKills"
					android:layout_column="4"
					android:layout_gravity="right"/>
		</TableRow>

		<TableRow
				android:layout_width="fill_parent"
				android:layout_height="fill_parent">

			<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textAppearance="?android:attr/textAppearanceMedium"
					android:text="Fighter"
					android:id="@+id/textView4"
					android:layout_column="0"/>

			<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textAppearance="?android:attr/textAppearanceMedium"
					android:text="5 [5]"
					android:id="@+id/txtCommanderStatusFighter"
					android:layout_column="1"/>

			<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textAppearance="?android:attr/textAppearanceMedium"
					android:text="Days:"
					android:id="@+id/textView12"
					android:layout_column="3"/>

			<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textAppearance="?android:attr/textAppearanceMedium"
					android:text="20"
					android:id="@+id/txtCommanderStatusDays"
					android:layout_column="4"
					android:layout_gravity="right"/>
		</TableRow>

		<TableRow
				android:layout_width="fill_parent"
				android:layout_height="fill_parent">

			<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textAppearance="?android:attr/textAppearanceMedium"
					android:text="Trader:"
					android:id="@+id/textView5"
					android:layout_column="0"/>

			<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textAppearance="?android:attr/textAppearanceMedium"
					android:text="5 [5]"
					android:id="@+id/txtCommanderStatusTrader"
					android:layout_column="1"/>

			<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textAppearance="?android:attr/textAppearanceMedium"
					android:text="Cash:"
					android:id="@+id/textView13"
					android:layout_column="3"/>

			<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textAppearance="?android:attr/textAppearanceMedium"
					android:text="11445 cr."
					android:id="@+id/txtCommanderStatusCash"
					android:layout_column="4"
					android:layout_gravity="right"/>
		</TableRow>

		<TableRow
				android:layout_width="fill_parent"
				android:layout_height="fill_parent">

			<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textAppearance="?android:attr/textAppearanceMedium"
					android:text="Engineer:"
					android:id="@+id/textView6"
					android:layout_column="0"/>

			<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textAppearance="?android:attr/textAppearanceMedium"
					android:text="5 [5]"
					android:id="@+id/txtCommanderStatusEngineer"
					android:layout_column="1"/>

			<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textAppearance="?android:attr/textAppearanceMedium"
					android:text="Debt:"
					android:id="@+id/textView14"
					android:layout_column="3"/>

			<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textAppearance="?android:attr/textAppearanceMedium"
					android:text="0 cr."
					android:id="@+id/txtCommanderStatusDebt"
					android:layout_column="4"
					android:layout_gravity="right"/>
		</TableRow>

		<TableRow
				android:layout_width="fill_parent"
				android:layout_height="fill_parent">

			<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textAppearance="?android:attr/textAppearanceMedium"
					android:text="Worth:"
					android:id="@+id/textView7"
					android:layout_column="0"/>

			<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textAppearance="?android:attr/textAppearanceMedium"
					android:text="12345 cr."
					android:id="@+id/txtCommanderStatusWorth"
					android:layout_column="1"/>
		</TableRow>

		<TableRow
				android:layout_width="fill_parent"
				android:layout_height="fill_parent">

			<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textAppearance="?android:attr/textAppearanceMedium"
					android:text="Reputation:"
					android:id="@+id/textView8"
					android:layout_column="0"/>

			<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textAppearance="?android:attr/textAppearanceMedium"
					android:text="Harmless"
					android:id="@+id/txtCommanderStatusReputation"
					android:layout_column="1"/>
		</TableRow>

		<TableRow
				android:layout_width="fill_parent"
				android:layout_height="fill_parent">

			<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textAppearance="?android:attr/textAppearanceMedium"
					android:text="Police record:"
					android:id="@+id/textView9"
					android:layout_column="0"/>

			<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textAppearance="?android:attr/textAppearanceMedium"
					android:text="Crook"
					android:id="@+id/txtCommanderStatusPoliceRecord"
					android:layout_column="1"/>
		</TableRow>

		<TableRow
				android:layout_width="fill_parent"
				android:layout_height="fill_parent">

			<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textAppearance="?android:attr/textAppearanceMedium"
					android:text="Difficulty:"
					android:id="@+id/textView10"
					android:layout_column="0"/>

			<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textAppearance="?android:attr/textAppearanceMedium"
					android:text="Normal"
					android:id="@+id/txtCommanderStatusDifficulty"
					android:layout_column="1"/>
		</TableRow>
	</TableLayout>

	<Button
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Quests"
			android:id="@+id/btnCommanderStatusQuests"
			android:layout_alignParentBottom="true"
			android:layout_alignParentLeft="true"
			android:layout_alignParentStart="true"
			android:onClick="btnCommanderStatusQuests"/>

	<Button
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Special Cargo"
			android:id="@+id/btnCommanderStatusSpecialCargo"
			android:layout_alignParentBottom="true"
			android:layout_alignParentRight="true"
			android:layout_alignParentEnd="true"
			android:onClick="btnCommanderStatusSpecialCargo"/>

	<Button
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Ship"
			android:id="@+id/btnCommanderStatusShip"
			android:layout_alignParentBottom="true"
			android:layout_toRightOf="@+id/btnCommanderStatusQuests"
			android:layout_toLeftOf="@+id/btnCommanderStatusSpecialCargo"
			android:onClick="btnCommanderStatusShip"/>

</RelativeLayout>