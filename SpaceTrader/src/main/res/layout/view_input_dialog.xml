<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

	<TextView
			android:layout_width="30dp"
			android:layout_height="wrap_content"
			android:text="123"
			android:id="@+id/view_input_dialog_amount"
			android:layout_alignParentTop="true"
			android:layout_alignParentLeft="true"
			android:layout_alignParentStart="true"
			android:layout_alignBottom="@+id/view_input_dialog_seekbar"
			android:gravity="center_vertical|right"/>

	<SeekBar
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/view_input_dialog_seekbar"
			android:layout_alignParentTop="true"
			android:layout_toRightOf="@+id/view_input_dialog_amount"
			android:layout_toLeftOf="@+id/view_input_dialog_max"
			android:indeterminate="false"/>

	<Button
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Max"
			android:id="@+id/view_input_dialog_max"
			style="@style/BuySellButtons"
			android:layout_alignParentTop="true"
			android:layout_alignParentRight="true"
			android:layout_alignParentEnd="true"/>
</RelativeLayout>